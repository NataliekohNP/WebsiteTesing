@model WEB2022APR_P05_T2.Models.Response

@{
    ViewData["Title"] = "Respond";
}

@section Styles {
    <link href="@Url.Content("~/css/customer_style.css")" rel="stylesheet" type="text/css" />
}
<div class="table-backdrop-create">
    <div class="row">
        <form asp-action="CreateResponse">
            <div class="col">
                <div class="form-group">
                    <textarea id="Text" name="Text" class="form-control" placeholder="Enter your response"></textarea>
                    <span style="color:red;">@ViewData["message"]</span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create Response" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

    <div style=" height: auto; margin-top: 3em; width: 100%; text-align: center;">
        <a asp-action="Feedback" class="row-status-2" style="text-decoration:none;">Back to List</a>
    </div>   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
