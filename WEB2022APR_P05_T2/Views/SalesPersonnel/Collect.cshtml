@model IEnumerable<WEB2022APR_P05_T2.Models.CashVoucher>

@{
    ViewData["Title"] = "Collect";
}

<h1 class="PageTitle">Vouchers to be collected</h1>

<input type="text" id="serialNumber" name="serialNumber" placeholder="Enter Serial Number" />

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewVoucher" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Serial Number</th>
                    <th>Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="serialNumber">
                    <td>@item.IssuingID</td>
                    @if (item.VoucherSN == null)
                    {
                        <td class="name">Null</td>
                    }
                    else
                    {
                        <td class="name">@item.VoucherSN</td>
                    }
                    <td>@item.Amount</td>
                    <td>
                        <a asp-action="Collect" asp-controller="SalesPersonnel" asp-route-id="@item.IssuingID" style="color: #55DD33">Collect</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
