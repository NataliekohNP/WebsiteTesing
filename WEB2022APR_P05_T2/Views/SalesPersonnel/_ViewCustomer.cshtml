@model IEnumerable<WEB2022APR_P05_T2.Models.Customer>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewCustomer" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Birth Date</th>
                    <th>Address</th>
                    <th>Country</th>
                    <th>Phone Number</th>
                    <th>Email Address</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MemberID</td>
                        <td>@item.MName</td>
                        <td>@item.MGender</td>
                        <td>@item.MBirthDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.MAddress</td>
                        <td>@item.MCountry</td>
                        <td>@item.MTelNo</td>
                        <td>@item.MEmailAddr</td>
                        <td>
                            <a asp-action="Collect" asp-controller="Sales"
                               asp-route-id="@item.MemberID" style="color: #55DD33">Collect</a>
                        </td>
                        <td>
                            <a asp-action="Redeem" asp-controller="Sales"
                               asp-route-id="@item.MemberID" style="color: #DC143C">Redeem</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}