@model WEB2022APR_P05_T2.Models.Product

@{
    ViewData["Title"] = "ProductDetail";
}

<h1>ProductDetails</h1>
<head>
    <style>
        form {
            width: 100%;
        }
        #picture {
            margin-top: 10%;
            margin-left: 10%;
            width: 20%;
            height: auto;
            float: left;
            margin-bottom: 2%;
        }

        #form {
            font-size: 10px;
            margin-top: 5%;
            margin-left: 10%;
            padding-top: 5%;
            padding-right: 15%;
            width: 60%;
            height: auto;
            float: left;
        }

        input{
            width: 100%;
            padding: 12px 12px;
            margin: 8px 0;
            box-sizing: border-box;
        }

        
        #update {
            text-align:center;
            font-size: 16px;
            background-color: #ffffff;
            border-style: solid;
            width: 100%;
            color: black;
            padding: 10px 16px;
            text-decoration: none;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    
    <form asp-action="Delete">
        <img id="picture" src="~/image/Products/@Model.ProductImage">
        <div id="form">
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">

                    @if ((Model.EffectiveDate.Value.Year != DateTime.Now.Year && Model.Obsolete=="0") || Model.Obsolete == "0")
                    {


                        <input asp-for="EffectiveDate" id="date" readonly style="background-color:red; color:white"><br><br>
                    }
                    else if (Model.EffectiveDate.Value.Year != DateTime.Now.Year && Model.Obsolete == "1")
                    {
                        <input asp-for="EffectiveDate" id="date" readonly style="background-color:yellow; color:black"><br><br>
                    }
                    else
                    {
                        @if (Model.EffectiveDate.Value.Month == DateTime.Now.Month)
                        {
                            <h2>NEW!</h2>
                        }
                        <input asp-for="EffectiveDate" id="date" readonly style="background-color: darkseagreen; color: white"><br><br>
                    }

                    <label for="pid">Product ID:</label><br>
                    <input asp-for="ProductId" readonly><br />
                    <label for="pname">Product Name:</label><br>
                    <input asp-for="ProductTitle" readonly><br />
                    <label for="price">Price:</label><br>
                    <input asp-for="Price" readonly><br><br>


                </div>
            </div>

            <br>
            <div class="form-group row">
                    <a id="update" asp-action="Edit" asp-controller="Product"
                       asp-route-id="@Model.ProductId">Update Details</a>
                    <input type="submit" value="Obsolete" class="btn btn-primary" />
                
            </div>
        </div>
    </form>

</body>
